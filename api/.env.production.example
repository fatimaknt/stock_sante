# Backend Laravel (.env)
APP_NAME="Stock Santé"
APP_ENV=production
APP_KEY=base64:nw2mYqHl/oYvQa9pLkRtZwXbCdEfGhIjKmNoPqRsTuVwXyZaBc
APP_DEBUG=false
APP_URL=https://api.votre-domaine.com

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=stock_sante
DB_USERNAME=root
DB_PASSWORD=your-secure-password

# Cache & Queue
# For production: use 'array' for stateless apps, 'database' for shared cache
# DO NOT use 'file' on Render - it's slow and doesn't persist across restarts
CACHE_DRIVER=array
# Queue: use 'sync' for immediate execution or 'database' for queued jobs
# Redis is not available on free Render plans
QUEUE_CONNECTION=sync

# Sanctum (API Token)
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com,www.votre-domaine.com

# JWT
JWT_SECRET=stock-sante-jwt-secret-change-this

# Mail (Configure with real SMTP provider like Gmail, Mailgun, or Mailtrap)
# IMPORTANT: Change from 'log' to 'smtp' to actually send emails
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@stock-sante.com
MAIL_FROM_NAME="Stock Santé"

# Alternative: Use Mailtrap for testing
# MAIL_HOST=live.smtp.mailtrap.io
# MAIL_PORT=465
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password
# MAIL_ENCRYPTION=ssl

# Google OAuth (optionnel - pour authentification Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.optimatech.pro/api/auth/google/callback

# Frontend URL (pour les liens dans les emails, etc.)
FRONTEND_URL=https://www.optimatech.pro
